<div class="container">
{% if app.request.attributes.get('_route') == "best365_store_login" or
        app.request.attributes.get('_route') == "best365_store_register" or
        app.request.attributes.get('_route') == "best365_store_password_remember" or
        app.request.attributes.get('_route') == "best365_store_password_recover" %}
    <div class="row">
        <div class="align-center margin-top-30">
            <img src="{{ asset('assets/img/logo.png') }}" width="150">
        </div>
    </div>
{% else %}
    <div class="row">
        <div class="col-sm-3">
            <a href="{{ url('best365_store_homepage') }}">
                <img src="{{ asset('assets/img/logo.png') }}" width="150">
            </a>
        </div>
        <div class="col-sm-6 padding-top-15">
            <form id="search-form" method="get" action="{{ url('best365_store_product_search') }}">
                <div class="input-group">
                    <input id="field" name="field" type="text" class="form-control search-text-border" placeholder="{{ "template.store_template_bundle.search.search_place_holder"|trans }}">
                    <span class="input-group-btn">
                        <button id="search-button" class="btn btn-success" type="button"><span class="glyphicon glyphicon-search"></span></button>
                    </span>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <hr>
    </div>
{% endif %}
</div>
