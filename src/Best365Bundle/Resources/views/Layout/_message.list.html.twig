<div class="row">
        {# Notice message (yellow) #}
        {% for flashMessage in app.session.flashbag.get('notice') %}
            {% include "@Best365/Layout/_message.item.html.twig" with {flashMessage: flashMessage, class: 'alert-warning'} %}
        {% endfor %}

        {# Success message (green) #}
        {% for flashMessage in app.session.flashbag.get('success') %}
            {% include "@Best365/Layout/_message.item.html.twig" with {flashMessage: flashMessage, class: 'alert-success'} %}
        {% endfor %}

        {# Info message (blue) #}
        {% for flashMessage in app.session.flashbag.get('notification') %}
            {% include "@Best365/Layout/_message.item.html.twig" with {flashMessage: flashMessage, class: 'alert-info'} %}
        {% endfor %}

        {# Warning message (yellow) #}
        {% for flashMessage in app.session.flashbag.get('alert') %}
            {% include "@Best365/Layout/_message.item.html.twig" with {flashMessage: flashMessage, class: 'alert-warning'} %}
        {% endfor %}

        {# Error message (red) #}
        {% for flashMessage in app.session.flashbag.get('error') %}
            {% include "@Best365/Layout/_message.item.html.twig" with {flashMessage: flashMessage, class: 'alert-danger'} %}
        {% endfor %}
    </div>
</div>
