{% if app.request.get('_route') == 'best365_store_login' or
        app.request.get('_route') == 'best365_store_register' or
        app.request.get('_route') == 'best365_store_password_remember' or
        app.request.get('_route') == 'best365_store_password_recover'%}
<hr class="hr-fade-out margin-top-30">
<p class="align-center font-11">
    {{ "template.store_template_bundle.copy_right"|trans }}
</p>
{% else %}
<footer class="footer">
    <div class="main-theme-border-top sub-theme-border-bottom">
    <div class="footer-content padding-top-15">
        <div class="container">
            <div class="row">
                <div class="col-sm-3 padding-bottom-15">
                    <a href="{{ url('best365_store_homepage') }}">
                        <img src="{{ asset('assets/img/logo.png') }}" width="150">
                    </a>
                </div>
                <div class="col-sm-3">
                    <p class="bold">
                        {{ "template.store_template_bundle.footer.information"|trans }}
                    </p>
                    <hr class="footer-hr">
                    <ul class="footer-ul">
                        {% set pages = elcodi_footer_pages() %}
                        {% for page in pages %}
                        <li class="footer-li">
                            <a class="main-theme-font" href="{{ url("best365_store_page", {
                                "id": page.id
                            }) }}">{{ page.title }}</a>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="col-sm-3">
                    <p class="bold">
                        {{ 'template.store_template_bundle.footer.our_address'|trans }}
                    </p>
                    <hr class="footer-hr">
                    {{ render(url('best365_store_footer_address')) }}
                </div>
                <div class="col-sm-3">
                    <p class="bold">
                        {{ 'template.store_template_bundle.footer.contact'|trans }}
                    </p>
                    <hr class="footer-hr">
                    {{ render(url('best365_store_footer_contact')) }}
                </div>
            </div>
        </div>
    </div>
</footer>
{% endif %}
