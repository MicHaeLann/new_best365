<li class="dropdown">
	<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
		<i class="fa fa-money" aria-hidden="true"></i>
		{{ "template.store_template_bundle.nav.currency.selector"|trans }}
		<span class="caret"></span>
	</a>
	<ul class="dropdown-menu">
		{% set index = 1 %}
		{% for currency in currencies %}
			{% if index > 1%}
			<li role="seperator" class="divider"></li> 
			{% endif %}
	        <li>
	            <a href="{{ url("best365_store_currency_switch", {'iso': currency.iso}) }}">
	            	{% if currency.iso == 'CNY' %}
	                <img src="{{ asset('assets/img/china.png') }}" />
	                {% else %}
	                <img src="{{ asset('assets/img/new_zealand.png') }}" />
	                {% endif %}
					<span class="margin-left-10 {% if currency.iso == activeCurrency.iso %} bold {% endif %}">{{ ("template.store_template_bundle.nav.currency." ~  currency.iso)|trans }}</span>
	                <!-- <img src="{{ asset('assets/img/' ~ currency.iso ~ '.png') }}" /> -->	            
	            </a>
	        </li>
	        {% set index = index + 1 %}
	    {% endfor %}
	</ul>
</li>
