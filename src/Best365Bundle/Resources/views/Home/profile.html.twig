<div class="profile-font">
    <span class="profile-icon"><i class="fa fa-user-circle" aria-hidden="true"></i></span>
    {{ "template.store_template_bundle.greeting.greeting"|trans }}
    {% if customer.id %}
        {{ customer.firstname }}
    {% else %}
        <a href="{{ url('best365_store_login') }}" class="main-theme-link">{{ "template.store_template_bundle.greeting.guest"|trans }}</a>
    {% endif %}
</div>
<div class="row margin-top-10">
    <div class="col-sm-6 profile-font">
        <div class="profile-function-icon">
            <a href="{{ url('best365_store_user') }}" class="profile-font" title="{{ "template.store_template_bundle.user.home.profile"|trans }}">
                <i class="fa fa-address-card-o profile-function-icon" aria-hidden="true"></i>
            </a>
        </div>
    </div>
    <div class="col-sm-6 profile-font">
        <div class="profile-function-icon">
