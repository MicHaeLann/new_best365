    <div class="col-sm-6  profile-font">
        <div class="profile-function-icon">
            <a href="{{ url('best365_store_order_list') }}" class="profile-font" title="{{ "template.store_template_bundle.user.home.my_orders"|trans }}">
                <i class="fa fa-shopping-bag" aria-hidden="true"></i>
            </a>
        </div>
    </div>
    <div class="col-sm-6  profile-font">
        <div class="profile-function-icon padding-left-10">
            <a href="{{ url('best365_store_address_list') }}" class="profile-font" title="{{ "template.store_template_bundle.user.home.my_addresses"|trans }}">
