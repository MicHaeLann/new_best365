{% extends "@Best365/Layout/_layout.html.twig" %}

{% block content %}
    <div class="row">
        <div class="col-sm-2">
            {% include "@Best365/Layout/_categories.html.twig" with {"categories": categories} %}
        </div>
        <div class="col-sm-10">
            {% include "@Best365/Home/events.html.twig" with {"events": events} %}
        </div>
    </div>
    {% for product in products %}
        <div>
            {% include "@Best365/Home/products.html.twig" with {"category": product} %}
        </div>
    {% endfor %}
    {% include "@Best365/Home/bestsellings.html.twig" with {"bestsellings" : bestselling} %}
    {% include "@Best365/Home/manufacturers.html.twig" with {"manufacturers" : manufacturers} %}
{% endblock %}
