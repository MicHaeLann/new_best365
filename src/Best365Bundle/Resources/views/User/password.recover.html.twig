{% extends "@Best365/Layout/_layout.html.twig" %}

{% block content %}
<div class="row login-content-container">
    <p class="login-title">
        {{ "template.store_template_bundle.user.password.recover_password"|trans }}
    </p>
    {% if sent %}
        <div class="alert alert-success">
            <p>{{ 'template.store_template_bundle.user.password.password_sent_text'|trans }}</p>
        </div>
    {% endif %}
    {{ form_start(form) }}
    {{ form_row(form.email, { "attr": { "class": "form-control", "length": 255 } }) }}
    {{ form_row( form.send, { "attr": { "class": "btn btn-success full-width" } }) }}
    {{ form_end(form) }}

</div>
{% endblock %}