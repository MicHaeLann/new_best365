{% extends "@Best365/Layout/_layout.html.twig" %}

{% block content %}
<div class="row login-content-container">
    <p class="login-title">
        {{ 'template.store_template_bundle.user.login.login_with_account'|trans }}
    </p>
    {{ form_start(form) }}
    {{ form_row(form.email, { attr: { class: "form-control" } }) }}
    {{ form_row(form.password, { attr: { class: "form-control" } }) }}
    {{ form_row(form.send, { attr: { class: 'btn btn-success full-width' } }) }}
    {{ form_end(form) }}
    <div class="align-right">
        <a href="{{ url('best365_store_password_remember') }}">
            {{ 'template.store_template_bundle.user.login.forgot_your_password'|trans }}
        </a>
    </div>
    <hr>
    <p>
        {{ 'template.store_template_bundle.user.login.unregistered'|trans }}
        <a class="bold" href="{{ url('best365_store_register') }}">
            {{ 'template.store_template_bundle.user.login.create_new_account'|trans }}
        </a>
    </p>
</div>
{% endblock %}