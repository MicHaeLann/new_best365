{{ form_start(form) }}
    {% if form_errors(form) %}
    {{ form_errors(form) }}
    {% endif %}
    {% do form.name.setRendered %}
    {{ form_row(form.recipientName, { "attr": { "class": "form-control max-width-600", "placeholder":"template.store_template_bundle.address.new.recipient.example_name"|trans }}) }}
    {{ form_row(form.recipientSurname, { "attr": { "class": "form-control max-width-600", "placeholder":"template.store_template_bundle.address.new.recipient.example_surname"|trans }}) }}
    {{ form_row(form.address, { "attr" : { "class": "form-control max-width-600", "placeholder":"template.store_template_bundle.address.new.address.example"|trans }}) }}
    {{ form_row(form.addressMore, { "attr" : { "class": "form-control max-width-600", "placeholder":"template.store_template_bundle.address.new.address_more.example"|trans }} ) }}
    {{ form_row(form.postalcode, { "attr" : { "class": "form-control max-width-600", "placeholder":"template.store_template_bundle.address.new.postalcode.example"|trans }} ) }}
    {{ form_row(form.city, {"value": "ES_an_ca_abiertaslas"}) }}
    {{ form_row(form.phone, { "attr": { "class": "form-control max-width-600", "placeholder":"template.store_template_bundle.address.new.phone.example"|trans }}) }}
    {% do form.mobile.setRendered %}
    {{ form_row(form.comments, { "attr" : { "class": "form-control max-width-600", "placeholder": "template.store_template_bundle.address.new.comments.example"|trans }}) }}
    {{ form_widget(form.send, { "attr": { "class": "btn btn-success" } }) }}
    {#<a href="{{ url("best365_store_address_list") }}" class="btn btn-default">{{ "template.store_template_bundle.address.new.cancel"|trans }}</a>#}
{{ form_end(form) }}
