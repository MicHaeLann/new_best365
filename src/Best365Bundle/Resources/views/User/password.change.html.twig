{% extends "@Best365/Layout/_layout.html.twig" %}

{% block content %}
<div class="row login-content-container">
    <p class="login-title">
        {{ "template.store_template_bundle.user.password.recover_password"|trans }}
    </p>
    {% if invalid %}
        <div class="alert alert-danger">
            <p>{{ 'template.store_template_bundle.user.password.invalid'|trans }}</p>
        </div>
    {% endif %}
    {{ form_start(form) }}
    {{ form_row(form.password, { attr: { class: "form-control" } }) }}
    {{ form_row(form.send, { attr: { class: 'btn btn-success full-width' } }) }}
    {{ form_end(form) }}
</div>
{% endblock %}
