{% extends "@Best365LayoutStoreTemplate/User/user.layout.html.twig" %}

{% block userbody %}
<div class="col-xs-10">
	<h3>
		{{ 'template.store_template_bundle.address.list.addresses'|trans }}
	</h3>
	<div class="float-right">
		<a href="{{ url('best365_store_address_new') }}" class="btn btn-success" data-test="add-address">
			<span class="glyphicon glyphicon-plus"></span>
		</a>
	</div>
	<table class="table table-striped margin-top-10">
		<thead>
			<td>
				{{ 'template.store_template_bundle.address.item.address_name'|trans }}
			</td>
			<td>
				{{ 'template.store_template_bundle.address.item.fullname'|trans }}
			</td>
			<td>
				{{ 'template.store_template_bundle.address.item.address'|trans }}
			</td>
			<td>
				{{ 'template.store_template_bundle.address.item.postal_code'|trans }}
			</td>
			<td>
				{{ 'template.store_template_bundle.address.item.phone_and_mobile'|trans }}
			</td>
			<td>
				{{ 'template.store_template_bundle.address.item.actions'|trans }}
			</td>
		</thead>
		<tbody>
		{% for address in addresses %}
			<tr>
				<td>
					{{ address.name }}
				</td>
				<td>
					{{ address.recipientName }} {{ address.recipientSurname }}
				</td>
				<td>
					{{ address.address }}
				</td>
				<td>
					{{ address.postalCode }}
				</td>
				<td>
					{{ address.phone }} / {{ address.mobile }}
				</td>
				<td>
					<a href="{{ url('best365_store_address_edit', { id:address.id, source:source }) }}" class="btn btn-info btn-xs" data-test="address-{{ address.id }}-edit">
						<span class="glyphicon glyphicon-pencil"></span>
					</a>

			        <a href="{{ url('best365_store_address_delete',{id:address.id,source:source}) }}" class="btn btn-danger btn-xs" data-test="address-{{ address.id }}-remove">
			        	<span class="glyphicon glyphicon-trash"></span>
			        </a>
				</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>
</div>
{% endblock %}